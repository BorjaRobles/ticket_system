<div>
  <%= form_tag("/tickets", :method => "get") do %>
    <p>
      <%= label_tag(:q,'Filtro') %><br />
      <%= select_tag(:estado,options_for_select([['Todos', 7],['Nuevos', 0],['Asignados', 1],['Cerrados', 2]])) %><br>
      <%= hidden_field_tag(:busqueda, "3")%>
    </p>
    <p class="button"><%= submit_tag "Buscar"%></p>
  <% end %>
</div>