<% if @encontrado %>
  <% if @encontrado.empty? %>
    <p> No se ha encontrado ninguna coincidencia </p>
  <% else %>
    <% @encontrado.each do |cadauno| %>
      <td> #ID - <%= link_to cadauno.id, mostrar_ticket_path(cadauno.id) %> </td> <br>
      <td> <%= image_tag cadauno.user.foto.url(:small) %> </td></br>
      <td> Usuario: <%= cadauno.user.name %> </td><br>
      <td> Los tags - <%= cadauno.tag_list %> </td><br>
      <td> <%= cadauno.titulo %> </td><br>
      <td> <%= cadauno.contenido %> </td><br>
      <td> Estado: <%= ver_estado(cadauno) %></td><br>
    
      <% if session[:user_id] == cadauno.user_id %>
        <%= link_to "ASIGNAR", asignar_estado_path(cadauno.id,Ticket::ASIGNADO)%> 
        - <%= link_to "CERRAR", asignar_estado_path(cadauno.id,Ticket::CERRADO)%><br>
        <td> <%= link_to "Comentar", new_user_ticket_comment_path(session[:user_id], cadauno.id) %> </td><br>
        <td> <%= link_to "Actualizar", edit_user_ticket_path(@user, cadauno)%>
        <td> <%= link_to "Eliminar", [@user, cadauno], :method => :delete %></td>
      <% end %>
    
      <% if cadauno.comments.count > 0 %>
        <% cadauno.comments.each do |comentario| %>
          <% usuario = User.find_by_id(comentario.user_id) %>
          <%= comentario.autor %> Comento el <%= comentario.created_at %><br>
          <%= comentario.texto %><br>
        <% end %>
      <% end %><br><br>
    <% end %> 
  <% end %>
  <%= will_paginate @encontrado %></br>  
<% end %>

<p> Buscar por tags o por titulo </p>
<%= form_tag("/buscador", :method => "get") do %>
  <p>
    <%= label_tag(:q,'Titulo')%><br />
    <%= text_field_tag(:titulo) %>
  </p>
  <p>
    <%= label_tag(:q,'Tags')%><br />
    <%= text_field_tag(:tag_list) %>
  </p>
  <p class="button"><%= submit_tag "Buscar"%></p>
<% end %>